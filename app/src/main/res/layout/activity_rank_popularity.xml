<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ltz.o2o.moudle.classification.rightRv.ranking.popularity.PopularityRankActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#444444"
        android:gravity="center"
        android:padding="20dp"
        android:text="人气榜根据商品购买人数、好评率、销售金额和数量等综合计算得出"
        android:textColor="@color/white"
        android:textSize="@dimen/_12dp" />


    <com.ltz.o2o.widget.flowtag.FlowTagLayout
        android:id="@+id/mFlowTagLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white"/>

    <include layout="@layout/include_line"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
