<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ltz.o2o.moudle.collage.content.CollageCommodityDetilsActivity">

    <com.ltz.o2o.widget.scrollview.IdeaScrollView
        android:id="@+id/ideaScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="260dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_member_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_19dp"
                        android:textColor="@color/red_a700" />


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_mark_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15dp"
                            android:textColor="@color/textcolor_grary" />
                        <View
                            android:id="@+id/line_price"
                            android:layout_width="70dp"
                            android:layout_height="1dp"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:background="@color/textcolor_grary"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_sellCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textcolor_grary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:maxLines="2"
                        android:padding="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="vertical">
                        
                        <ImageView
                            android:id="@+id/img_guoqi"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:id="@+id/tv_madeInName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="8"
                            android:textSize="@dimen/_12dp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_feeCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="领券:"
                        android:textColor="@color/textcolor_grary"
                        android:textSize="@dimen/_12dp" />

                    <TextView
                        android:id="@+id/tv_feeCards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/more"
                        android:text="满199减10优惠卷；满299减30优惠卷"
                        android:textColor="@color/red_500"
                        android:textSize="@dimen/_12dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/Layout_isPtPro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="促销:"
                        android:textColor="@color/textcolor_grary"
                        android:textSize="@dimen/_12dp" />

                    <TextView
                        android:id="@+id/tv_isPtPros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/more"
                        android:text="不参与拼单活动"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_proStandards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="规格:"
                        android:textColor="@color/textcolor_grary"
                        android:textSize="@dimen/_12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/more"
                        android:text="选择商品规格 "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="参数:"
                        android:textColor="@color/textcolor_grary"
                        android:textSize="@dimen/_12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/more"
                        android:text="查看产品参数"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="快递:"
                        android:textColor="@color/textcolor_grary"
                        android:textSize="@dimen/_12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="免邮"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12dp"
                        android:id="@+id/tv_fare" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="税费:"
                        android:textColor="@color/textcolor_grary"
                        android:textSize="@dimen/_12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="无"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12dp"
                        android:id="@+id/tv_taxCost" />
                </LinearLayout>



            </LinearLayout>
            <!--宝贝评价-->
            <LinearLayout
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_totalProReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tab_checked"
                        android:text="查看更多 >"/>

                </LinearLayout>



            </LinearLayout>
            <!--详情-->
            <LinearLayout
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="------详情------" />


                <WebView
                    android:id="@+id/mWebView"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="30dp"
                android:text="---已经到底了---" />
        </LinearLayout>
    </com.ltz.o2o.widget.scrollview.IdeaScrollView>

    <include layout="@layout/include_header_collage_commoditydetilis" />

    <include layout="@layout/include_bottom_commodiy_detils" />

</FrameLayout>
