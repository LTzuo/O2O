<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ltz.o2o.moudle.other.bind_phonenumber.BindPhonenumberActivity">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@color/tab_checked">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="5dp"
          android:src="@drawable/login_icon_back"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:text="绑定手机号码"
          android:textSize="@dimen/_17dp"
          android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
          android:textColor="@color/white"
          android:gravity="center"
          />

   </RelativeLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="15dp"
       android:orientation="horizontal">

      <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="*"
       android:textColor="@color/red_a700"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/_13dp"
          android:text="一键登录,需要您必须绑定手机号码,方便您购物."
          android:textColor="@color/black"/>
   </LinearLayout>

   <include layout="@layout/include_line"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="15dp"
       android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#248bf5"
          android:textSize="@dimen/_15dp"
          android:layout_marginLeft="20dp"
          android:text="+86"/>

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@null"
          android:layout_marginLeft="15dp"
          android:textSize="@dimen/_15dp"
          android:hint="请您输入手机号码"/>


   </LinearLayout>
   <include layout="@layout/include_line"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="15dp"
       android:orientation="horizontal">

      <CheckBox
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/_13dp"
          android:text="我已阅读并同意"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#ea5d5c"
          android:textSize="@dimen/_13dp"
          android:text="服务声明"/>

   </LinearLayout>


   <TextView
       android:id="@+id/tv_next"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="25dp"
       android:background="@drawable/shape_btnbg_qcdqdl"
       android:gravity="center"
       android:padding="10dp"
       android:text="下一步"
       android:textColor="@color/white"
       android:textSize="@dimen/_15dp"
       android:textStyle="bold" />





</LinearLayout>
